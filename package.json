{
  "name": "dogfen",
  "description": "self-rendering ~markdown~ html documents",
  "repository": "github:daylinmorgan/dogfen",
  "version": "2026.1018.0",
  "license": "MIT",
  "files": [
    "dist/dogfen.js",
    "dist/dogfen.min.js",
    "dist/dogfen.readonly.min.js"
  ],
  "main": "dist/dogfen.js",
  "browser": "dist/dogfen.min.js",
  "exports": {
    "./readonly": {
      "default": "dist/dogfen.readonly.min.js"
    },
    "./katex": {
      "default": "dist/dogfen.katex.min.js"
    },
    ".": {
      "browser": "dist/dogfen.min.js",
      "unpkg": "dist/dogfen.min.js",
      "default": "dist/dogfen.js"
    }
  },
  "scripts": {
    "dev": "concurrently npm:watch npm:bundle:serve",
    "watch": "nim watch",
    "bundle:serve": "bun run bundle --watch --servedir=.",
    "build": "nim buildALl",
    "bundle:katex": "bun run bundle --minify --outfile=dist/dogfen.katex.min.js",
    "bundle:min": "bun run bundle --minify --outfile=dist/dogfen.min.js",
    "bundle:read": "bun run bundle --minify --outfile=dist/dogfen.readonly.min.js",
    "bundle": "esbuild src/dogfen.js --bundle --external:https://* --outfile=dist/dogfen.js --format=esm"
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@iconify-json/openmoji": "^1.2.21",
    "@unocss/preset-icons": "^66.6.0",
    "@unocss/preset-typography": "^66.6.0",
    "@unocss/preset-wind4": "^66.6.0",
    "@unocss/runtime": "^66.6.0",
    "codemirror": "^6.0.2",
    "concurrently": "^9.2.1",
    "dompurify": "^3.3.1",
    "esbuild": "^0.25.12",
    "highlight.js": "^11.11.1",
    "lz-string": "^1.5.0",
    "marked": "^16.4.2",
    "marked-alert": "^2.1.2",
    "marked-footnote": "^1.4.0",
    "marked-highlight": "^2.2.3",
    "marked-katex-extension": "^5.1.6"
  }
}
