{
  "name": "dogfen",
  "description": "self-rendering ~markdown~ html documents",
  "version": "2026.1015.0",
  "license": "MIT",
  "files": [
    "dist/dogfen.js",
    "dist/dogfen.min.js",
    "dist/dogfen.readonly.min.js"
  ],
  "main": "dist/dogfen.js",
  "browser": "dist/dogfen.min.js",
  "exports": {
    "./readonly": {
      "default": "dist/dogfen.readonly.min.js"
    },
    ".": {
      "browser": "dist/dogfen.min.js",
      "unpkg": "dist/dogfen.min.js",
      "default": "dist/dogfen.js"
    }
  },
  "scripts": {
    "build": "nim build -d:release && nim build -d:minify && nim build -d:minify -d:readOnly",
    "bundle:min": "bun run bundle --minify --outfile=dist/dogfen.min.js",
    "bundle:read": "bun run bundle --minify --outfile=dist/dogfen.readonly.min.js",
    "bundle": "esbuild src/dogfen.js --bundle --format=iife --external:https://* --outfile=dist/dogfen.js"
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@unocss/preset-typography": "^66.6.0",
    "@unocss/preset-wind3": "^66.6.0",
    "@unocss/runtime": "^66.6.0",
    "codemirror": "^6.0.2",
    "esbuild": "^0.25.12",
    "highlight.js": "^11.11.1",
    "lz-string": "^1.5.0",
    "marked": "^16.4.2",
    "marked-alert": "^2.1.2",
    "marked-footnote": "^1.4.0",
    "marked-highlight": "^2.2.3"
  }
}
